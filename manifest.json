{
  "manifest_version": 3,
  "name": "Browser Audio Transcriber",
  "version": "1.0.0",
  "description": "Transcribe audio from browser tabs and save locally",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "downloads",
    "tabCapture",
    "offscreen"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Audio Transcriber"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "offscreen": {
    "reasons": ["USER_MEDIA"],
    "justification": "The extension needs to process audio from tab capture, and the Web Speech API is only available in a document context.",
    "path": "offscreen.html"
  }
} 